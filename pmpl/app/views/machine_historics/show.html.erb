	<div class="block_content">
		<p>
      <b>Placa:</b>
      <%= @machine_historic.vehicle.license_plate %>
    </p>
		<p>
		  <b>Oleo:</b><br>
		  <%=h @machine_oil.oil.name %> <br>
	    - Km: <%=h @machine_oil.km %> <br>
