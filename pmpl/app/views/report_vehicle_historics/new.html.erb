<div class="block">

  	<div class="block_head">
  		<div class="bheadl"></div>
  		<div class="bheadr"></div>

  		<h2>Buscar</h2>
  	</div>		<!-- .block_head ends -->

  	<div class="block_content">
  	
  	<%= form_for @report_vehicle_historic do |f| %>
  
    <p>
  	  <%= f.label :vehicle_id, "Veiculo" %><br />
  	  <%= f.select :vehicle_id, @vehicles, :prompt => "Selecione", :class => "styled" %>
  	</p>
    <p>
  	  <%= f.label :place_id, "Local" %><br />
  	  <%= f.select :place_id, @places, :prompt => "Selecione", :class => "styled" %>
  	</p>
    <p>
  	  <%= f.label :oil_id, "Oleo" %><br />
  	  <%= f.select :oil_id, @oils, :prompt => "Selecione", :class => "styled" %>
  	</p>
  	<p>
  	  <%= f.label :status, "Status" %><br />
  	  <%= f.select :status, ["aberto", "fechado"], :prompt => "Selecione", :class => "styled" %>
  	</p>
    <p>
      <%= f.label :initial_date, "Data Inicial" %><br />
      <%= f.date_select :initial_date, :order => [:day, :month, :year], :include_blank => "true", :default => "nil" %>
    </p>
    <p>
      <%= f.label :end_date, "Data Final" %><br />
      <%= f.date_select :end_date, :order => [:day, :month, :year], :include_blank => "true", :default => "nil" %>
    </p>
    <p>
      <%= f.submit "Pesquisar", :class => "submit small" %>
    </p>
    
  <% end %>
  
  </div>		<!-- .block_content ends -->

	<div class="bendl"></div>
	<div class="bendr"></div>
</div>		<!-- .block ends -->